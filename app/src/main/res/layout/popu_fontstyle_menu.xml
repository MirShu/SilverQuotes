<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_popu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#fafafa">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="26px"
                android:paddingTop="26px"
                android:text="字体大小"
                android:textColor="#666666"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f0f0f0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30px"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="30px"
                android:background="@drawable/shape_font_bag"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/font_min"
                    style="@style/font_textview_style"
                    android:text="小" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="40dp"
                    android:background="#47a4f2" />

                <TextView
                    android:id="@+id/font_default"
                    style="@style/font_textview_style"
                    android:background="@drawable/shape_font_press"
                    android:text="默认" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="40dp"
                    android:background="#47a4f2" />

                <TextView
                    android:id="@+id/font_max"
                    style="@style/font_textview_style"
                    android:text="大" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
